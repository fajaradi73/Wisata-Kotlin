<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:shimmer="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:ignore="ContentDescription">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_nearby"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"/>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_view_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        shimmer:duration="800">

        <!-- Adding 7 rows of placeholders -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <include layout="@layout/item_nearby" />
            <include layout="@layout/item_nearby" />
            <include layout="@layout/item_nearby" />
            <include layout="@layout/item_nearby" />
            <include layout="@layout/item_nearby" />
            <include layout="@layout/item_nearby" />
            <include layout="@layout/item_nearby" />
        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone"
            android:id="@+id/ll_nodata"
            android:orientation="vertical">

            <ImageView
                xmlns:app="http://schemas.android.com/apk/lib/com.app.chasebank"
                android:scaleType="fitCenter"
                app:border_color="@color/colorPrimary"
                android:layout_gravity="center"
                android:id="@+id/iv_nodata"
                android:src="@drawable/ic_mission"
                android:layout_height="200dp"
                android:layout_width="200dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/not_found_tour"
                android:id="@+id/tv_nodata"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_margin="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/ll_gps"
            android:visibility="gone"
            android:orientation="vertical">
            <ImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:layout_marginTop="-10dp"
                android:layout_marginBottom="@dimen/padding_10"
                android:src="@drawable/ic_no_location"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/gps_off"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_margin="@dimen/padding_10"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/open_location_settings"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_margin="@dimen/padding_10"/>
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/padding_10"
                app:cardCornerRadius="@dimen/padding_10"
                android:foreground="?android:attr/selectableItemBackground"
                android:focusable="true"
                android:clickable="true"
                android:id="@+id/btn_ok"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardElevation="1dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:text="@string/ok"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rv_nearby">

        </androidx.recyclerview.widget.RecyclerView>
        <fragment
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fitsSystemWindows="true"
            android:id="@+id/maps_nearby"
            android:name="com.google.android.gms.maps.SupportMapFragment" />

    </LinearLayout>
</LinearLayout>